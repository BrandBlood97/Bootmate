<div class="container text-center">
  <img
    src="./images/background UCF.png"
    class="img-center"
    alt="image of class logo"
  />
</div>
<div class="container text-center">
  <div class="row">
    <div class="border">
      <form class="signup-form">
        <h2>New User Registration:</h2>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">First Name</span>
          <input
            type="text"
            class="form-control"
            placeholder=""
            aria-label=""
            aria-describedby="addon-wrapping"
            id="firstName-signup"
          />
        </div>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">Last Name</span>
          <input
            type="text"
            class="form-control"
            placeholder=""
            aria-label=""
            aria-describedby="addon-wrapping"
            id="lastName-signup"
          />
        </div>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">Email Address</span>
          <input
            type="text"
            class="form-control"
            placeholder=""
            aria-label=""
            aria-describedby="addon-wrapping"
            id="email-signup"
          />
        </div>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">UFC Class</span>
          <select
            aria-placeholder="Select..."
            class="form-select"
            aria-label="UFC Course"
            aria-describedby="addon-wrapping"
            id="class-signup"
          >
            <option value="Full-Stack">Full-Stack</option>
          </select>
        </div>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">Graduation Month</span>
          <select
            class="form-select"
            aria-label="Graduation Month"
            aria-describedby="addon-wrapping"
            id="graduationMonth-signup"
          >
            <option value="January">January</option>
            <option value="February">February</option>
            <option value="March">March</option>
            <option value="April">April</option>
            <option value="May">May</option>
            <option value="June">June</option>
            <option value="July">July</option>
            <option value="August">August</option>
            <option value="September">September</option>
            <option value="October">October</option>
            <option value="November">November</option>
            <option value="December">December</option>
          </select>
        </div>
        <div class="form-group">
          <label for="employment-signup">Interested in Employment Opportunities:</label>
          <select class="form-control" id="employment-signup">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
        <div class="form-group">
          <label for="collaboration-signup">Interested in collaboration:</label>
          <select class="form-control" id="collaboration-signup">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
        <div>
          <button class="btn btn-secondary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
